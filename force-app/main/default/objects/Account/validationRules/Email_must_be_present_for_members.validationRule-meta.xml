<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Email_must_be_present_for_members</fullName>
    <active>false</active>
    <errorConditionFormula>AND(  ISPICKVAL(Status__c, &#39;Member&#39; ) ,  ISBLANK( PersonEmail) )</errorConditionFormula>
    <errorDisplayField>PersonEmail</errorDisplayField>
    <errorMessage>Email is required for members</errorMessage>
</ValidationRule>
